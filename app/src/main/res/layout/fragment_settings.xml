<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/settings_title"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Settings"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:hint="Name (Coming Soon)"
                app:startIconDrawable="@drawable/ic_user"
                app:layout_constraintTop_toBottomOf="@+id/settings_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_name_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="17dp"
                    android:textSize="18sp"
                    tools:ignore="TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:hint="Currency (Coming Soon)"
                app:startIconDrawable="@drawable/ic_currency_exchange"
                app:layout_constraintTop_toBottomOf="@+id/input_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_field_currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="17dp"
                    android:textSize="18sp"
                    tools:ignore="TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Button to add the transaction -->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/edit_name_and_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                app:icon="@drawable/ic_sync"
                app:layout_constraintTop_toBottomOf="@id/input_currency"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="27dp"/>

            <FrameLayout
                android:id="@+id/notifications_title"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_name_and_currency">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification Settings"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/notifications_switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="27dp"
                android:text="All App Notifications (Coming Soon)"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notifications_title"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/budget_notifications_switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="27dp"
                android:text="Budget Notifications (Coming Soon)"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notifications_switch"
                android:layout_marginStart="10dp"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/achievement_notifications_switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="27dp"
                android:text="Achievement Notifications (Coming Soon)"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/budget_notifications_switch"
                android:layout_marginStart="10dp"/>

            <FrameLayout
                android:id="@+id/font_size_title"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/achievement_notifications_switch">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Font Size Settings"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/test1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:valueFrom="25.0"
                android:valueTo="100.0"
                android:padding="27dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/font_size_title"
                android:layout_marginHorizontal="20dp"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/test2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:valueFrom="25.0"
                android:valueTo="100.0"
                android:padding="27dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/test1"
                android:layout_marginHorizontal="20dp"/>


            <com.google.android.material.slider.Slider
                android:id="@+id/test3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:valueFrom="25.0"
                android:valueTo="100.0"
                android:padding="27dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/test2"
                android:layout_marginHorizontal="20dp"/>


            <com.google.android.material.slider.Slider
                android:id="@+id/test4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:valueFrom="25.0"
                android:valueTo="100.0"
                android:padding="27dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/test3"
                android:layout_marginHorizontal="20dp"/>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
