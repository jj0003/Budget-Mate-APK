<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.Budget">

    <!-- Root Layout: ConstraintLayout for flexible and efficient arrangement of child views -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Title Section: FrameLayout to hold the title TextView -->
        <FrameLayout
            android:id="@+id/transaction_title"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <!-- Title TextView: Displays the title "Add your budget" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add your budget"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </FrameLayout>

        <!-- Input Frequency: TextInputLayout for selecting budget frequency -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_frequency"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_time"
            android:hint="Select frequency"
            app:layout_constraintTop_toBottomOf="@id/transaction_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="20dp">

            <!-- AutoCompleteTextView for frequency selection -->
            <AutoCompleteTextView
                android:id="@+id/autocomplete_frequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textSize="18sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Input Amount: TextInputLayout for entering the budget amount -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_amount"
            app:startIconDrawable="@drawable/ic_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Amount"
            app:layout_constraintTop_toBottomOf="@id/input_frequency"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="20dp">

            <!-- EditText for entering the budget amount, accepting only decimal numbers -->
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:textSize="18sp"
                tools:ignore="TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Add Budget Button: FloatingActionButton to add a budget -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/add_budget_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Add"
            app:icon="@drawable/ic_savings"
            app:layout_constraintTop_toBottomOf="@id/input_amount"
            app:layout_constraintRight_toRightOf="parent"/>

        <!-- Delete All Budgets Button: FloatingActionButton to delete all budgets -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/delete_budget_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Delete All"
            app:icon="@drawable/ic_hammer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_amount" />



        <!-- Card View for Transaction List -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/recyclerView_budget"
            style="?attr/materialCardViewElevatedStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/delete_budget_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp">

            <!-- Vertical Layout for Transaction List Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title for Transaction History -->
                <TextView
                    android:id="@+id/recyclerview_budget_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget History"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="6sp"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeStepGranularity="2sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <!-- RecyclerView for Displaying Transactions -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_budget_history"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/budget_list_item" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
